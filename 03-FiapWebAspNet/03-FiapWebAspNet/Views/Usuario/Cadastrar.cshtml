
@model Usuario
@{
    ViewData["Title"] = "Cadastrar";
}

<h1>Cadastrar</h1>

<p>@TempData["msg"]</p>
<p>Usuário Cadastrado: @ViewData["nome"]</p>
@if (Model != null)
{
    <p>@Model.dtNascimento</p>
    <p>@Model.email</p>
}



<form action="/Usuario/Cadastrar" method="post">
    <div class="form-group">
        <label for="id_nome">Nome</label>
        <input type="text" id="id_nome" name="nome" class="form-control" />
    </div>
    <div class="form-group">
        <label for="id_dtNascimento">Data de Nascimento</label>
        <input type="text" id="id_dtNascim" name="dtNascimento" class="form-control" />
    </div>        
    <div class="form-group">
        <label for="id_email">E-Mail</label>
        <input type="text" id="id_email" name="email" class="form-control" />
    </div>
    <input type="submit" class="btn btn-primary" value="Cadastrar" />
</form>


